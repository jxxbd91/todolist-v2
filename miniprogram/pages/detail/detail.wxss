/* miniprogram/pages/detail/detail.wxss */
.continer {
  position: absolute;
  top: 120rpx;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.detail-cont {
  margin: 10rpx;
}

.detail-title {
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid rgba(20, 19, 19, 0.6);
  font-size: 40rpx;
  font-weight: bold;
  position: relative;
}

.com-dt {
  position: absolute;
  left: 0;
  transform: translateY(50%);
  margin-top: -10rpx;
}

.detail-description {
  margin-top: 30rpx;
  min-height: 200rpx;
  padding: 10rpx 20rpx;
  border: 1px solid rgba(0, 0, 0, 0.5);
}

.detail-btns {
  display: flex;
  justify-content: center;
  margin-bottom: 50rpx;
}

.btn {
  border: 1rpx solid rgba(110, 106, 106, 0.815);
  padding: 10rpx 30rpx;
  border-radius: 5rpx;
  color: #fff;
}

.btn-completed {
  margin-right: 20rpx;
  background-color: rgb(35, 187, 60);
}

.btn-start {
  margin-right: 20rpx;
  background-color: rgb(45, 35, 187);
}

.btn-edit {
  margin-left: 20rpx;
  background-color: rgb(223, 77, 41);
}

.done {
  color: #aaa;
  text-decoration: line-through;
}